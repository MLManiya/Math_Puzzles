<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Continue_Puzzle_Play_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gameplaybackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_continue_puzzle_play_skip_imageview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="2.2"
                android:src="@drawable/skip" />

            <TextView
                android:id="@+id/activity_continue_puzzle_play_level_show_textview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="0.8"
                android:background="@drawable/level_board"
                android:gravity="center"
                android:text="Puzzle 1"
                android:textSize="@dimen/_25sdp" />

            <ImageView
                android:id="@+id/activity_continue_puzzle_play_hint_imageview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="2.2"
                android:src="@drawable/hint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <ImageView
                android:id="@+id/activity_continue_puzzle_play_puzzle_stage_imageview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:src="@color/cardview_light_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_weight="7.5"
            android:background="@color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="0.9"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_continue_puzzle_play_answer_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:enabled="false"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/activity_continue_puzzle_play_clear_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="2.1"
                    android:background="@drawable/baseline_backspace_24"
                    android:backgroundTint="@color/white"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/activity_continue_puzzle_play_submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:padding="@dimen/_2sdp"
                    android:text="SUBMIT"
                    android:textSize="@dimen/_15sdp"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/B1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/B0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>