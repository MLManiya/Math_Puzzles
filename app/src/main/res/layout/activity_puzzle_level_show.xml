<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puzzle_Level_Show_Activity"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Select Puzzle"
        android:gravity="center"
        android:layout_weight="9"
        android:textSize="@dimen/_25sdp"
        />
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_puzzle_level_show_gridview"
        android:numColumns="4"
        android:layout_weight="3"
        tools:listitem="@layout/activity_puzzle_level_show_item_file"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/activity_puzzle_level_show_item_file_imageview_back"
            android:layout_gravity="bottom"
            android:layout_weight="0.04"
            android:layout_marginEnd="@dimen/_100sdp"
            android:visibility="invisible"
            android:src="@drawable/back"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/activity_puzzle_level_show_item_file_imageview_next"
            android:layout_gravity="bottom"
            android:layout_weight="0.04"
            android:layout_marginStart="@dimen/_100sdp"
            android:src="@drawable/next"/>
    </LinearLayout>
</LinearLayout>